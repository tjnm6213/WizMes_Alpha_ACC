                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label x:Name="lblMsg" Grid.Column="3" Grid.Row="3" Margin="1" Background="Yellow" HorizontalContentAlignment="Center" Visibility="Hidden" >
                <TextBlock x:Name="tbkMsg" Text="자료 입력 중" ></TextBlock>
            </Label>

            <!--검색조건-->
            <Grid Grid.Row="0" Grid.Column="1" x:Name="grdSrh1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60*" />
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Margin="1" HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <!--<CheckBox VerticalAlignment="Center" ></CheckBox>-->
                        <TextBlock Text="사 원" VerticalAlignment="Center" HorizontalAlignment="Center" ></TextBlock>
                    </StackPanel>
                </Label>
                <TextBox x:Name="TextBoxPerson" Grid.Column="1" Margin="1" KeyDown="txtPerson_KeyDown"/>
                <Button x:Name="ButtonPerson" Grid.Column="2" Margin="1" Click="ButtonPerson_Click">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" ></Image>
                </Button>
            </Grid>

            <!-- 사용안함 -->
            <Grid Grid.Row="1" Grid.Column="1" x:Name="grdSrh2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60*" />
                    <ColumnDefinition Width="120*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Margin="1" HorizontalContentAlignment="Left"
                       MouseLeftButtonUp="lblUseClssSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <CheckBox x:Name="chkUseClssSrh" Checked="chkUseClssSrh_Checked" Unchecked="chkUseClssSrh_Unchecked"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="퇴사자포함" />
                    </StackPanel>
                </Label>

