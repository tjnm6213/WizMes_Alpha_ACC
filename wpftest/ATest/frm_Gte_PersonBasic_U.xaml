                <!--추가-->
                <Button x:Name="btnAdd" Grid.Column="0" Grid.Row="0" Margin="1" Click="btnAdd_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiInsert}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblInsert},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!--수정-->
                <Button x:Name="btnUpdate" Grid.Column="1" Grid.Row="0" Margin="1" Click="btnUpdate_Click" IsEnabled="True">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!--삭제-->
                <Button x:Name="btnDelete" Grid.Column="2" Grid.Row="0" Margin="1" Click="btnDelete_Click" IsEnabled="True">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiDelete}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblDelete},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!--닫기-->
                <Button x:Name="btnClose" Grid.Column="3" Grid.Row="0" Margin="1" Click="btnClose_Click" IsEnabled="True">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!--검색-->
                <Button x:Name="btnSearch" Grid.Column="0" Grid.Row="1" Margin="1" Click="btnSearch_Click" IsEnabled="True">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!--저장-->
                <Button x:Name="btnSave" Grid.Column="1" Grid.Row="1" Margin="1" Click="btnSave_Click" Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!--취소-->
                <Button x:Name="btnCancel" Grid.Column="2" Grid.Row="1" Margin="1" Click="btnCancel_Click" Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!--엑셀-->
                <Button x:Name="btnExcel" Grid.Column="3" Grid.Row="1" Margin="1" Click="btnExcel_Click" Visibility="Visible">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Source={StaticResource tblExcel}, Mode=OneTime, Path=Text}" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                </Button>
                <!--인쇄-->
                <Button x:Name="btnPrint" Grid.Column="3" Grid.Row="2" Margin="1" Click="btnPrint_Click" Visibility="Visible">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiPrint}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="인쇄(P)" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.ContextMenu>
                        <ContextMenu x:Name="menu">
                            <MenuItem x:Name="menuSeeAhead" Header="미리보기" Click="menuSeeAhead_Click" ></MenuItem>
                            <MenuItem x:Name="menuRightPrint" Header="바로인쇄" Click="menuRightPrint_Click" ></MenuItem>
                            <MenuItem x:Name="menuClose" Header="닫   기" Click="menuClose_Click" ></MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>


            </Grid>
            
