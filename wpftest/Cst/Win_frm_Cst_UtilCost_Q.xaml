                    <DataGridColumnHeader Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="용수량" />
                    <DataGridColumnHeader Grid.Row="1" Grid.Column="1" Content="사용량" />
                    <DataGridColumnHeader Grid.Row="1" Grid.Column="2" Content="금액" />
